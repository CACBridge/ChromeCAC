<Window x:Name="prompt" x:Class="ChromeCAC.Popup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChromeCAC"
        mc:Ignorable="d"
        Title="ChromeCAC" Height="112.181" Width="300">
    <Grid>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="This website is attempting to sign data using your private key. Do you want to continue?" VerticalAlignment="Top" Height="39" Width="272" TextAlignment="Center"/>
        <Button x:Name="btnYes" Content="Yes" HorizontalAlignment="Left" Margin="160,49,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btnNo" Content="No" HorizontalAlignment="Left" Margin="65,49,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
